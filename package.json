{
  "name": "react-base",
  "version": "0.2.0",
  "description": "a base project for react",
  "scripts": {
    "start": "http-server public",
    "dev": "BABEL_ENV=development NODE_ENV=development npm run build:clean && node devServer.js",
    "build": "npm run build:clean && npm run build:webpack",
    "build:clean": "rimraf ./public/assets/*",
    "build:webpack": "webpack --config webpack.config.prod.js",
    "test": "NODE_ENV=test mocha --require test/.setup.js web/components/**/test.js web/containers/**/test.js test/**/*-test.js",
    "test:lint": "eslint web",
    "test:cover": "NODE_ENV=test istanbul cover _mocha --require test/.setup.js web/components/**/test.js web/containers/**/test.js test/**/*-test.js",
    "test:coverResults": "http-server coverage/lcov-report"
  },
  "keywords": [
    "react",
    "redux",
    "react-router",
    "babel",
    "webpack",
    "sass"
  ],
  "repository": {
    "type": "git"
  },
  "license": "MIT",
  "devDependencies": {
    "babel-eslint": "^4.0.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-register": "^6.8.0",
    "chai": "^3.5.0",
    "css-modules-require-hook": "^4.0.0",
    "enzyme": "^2.3.0",
    "eslint": "^1.3.1",
    "eslint-plugin-react": "^3.0.0",
    "ignore-styles": "^1.2.0",
    "istanbul": "1.0.0-alpha.2",
    "jsdom": "^9.0.0",
    "mocha": "^2.4.5",
    "react-addons-test-utils": "^15.0.2",
    "sinon": "^1.17.4",
    "webpack-dev-server": "2.0.0-beta"
  },
  "dependencies": {
    "autoprefixer": "^6.3.1",
    "axios": "^0.11.0",
    "babel-core": "^6.3.26",
    "babel-loader": "^6.2.0",
    "babel-preset-es2015-native-modules": "^6.6.0",
    "babel-preset-react": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "classnames": "^2.2.3",
    "css-loader": "^0.23.0",
    "extract-text-webpack-plugin": "^1.0.0",
    "file-loader": "^0.8.5",
    "http-server": "^0.9.0",
    "moment": "^2.10.6",
    "node-sass": "^3.4.2",
    "normalize.css": "^3.0.3",
    "postcss-loader": "^0.9.1",
    "react": "15.0.2",
    "react-dom": "15.0.2",
    "react-hot-loader": "^3.0.0-beta.2",
    "react-input-autosize": "^1.0.0",
    "react-redux": "^4.4.0",
    "react-router": "^2.0.0",
    "react-router-redux": "^4.0.0",
    "redux": "^3.3.1",
    "redux-actions": "^0.9.1",
    "redux-thunk": "^2.0.1",
    "sass-loader": "^3.1.2",
    "style-loader": "^0.13.0",
    "url-loader": "^0.5.7",
    "webpack": "2.1.0-beta.7"
  }
}
